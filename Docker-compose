version: "3.7"

services:
  flask:
    build: ./flask
    container_name: flask_restful_app
    restart: always
    expose:
      - 5000
    networks:
      - ukmcs_network

  nginx:
    build: ./nginx
    container_name: nginx-flask
    restart: always
    ports:
      - "8080:80"
    networks:
      - ukmcs_network

networks:
  ukmcs_network:
    external: true